<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/common_bg"
     >
  <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_gravity="top"
      android:background="@drawable/horizontal_line"
  ></LinearLayout>      
 <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:background="@drawable/smokey_bg"
    android:gravity="left">
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="fill_parent"
       android:text="@string/sell_stuff_welcome"
       android:textSize="16dp"
       android:gravity="center_vertical"
       android:textColor="@android:color/primary_text_light"
       android:textStyle="bold"
       android:paddingLeft="15dp"
   />
   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:gravity="right">
       <Button
       android:id="@+id/proceed_main_selling"
       android:layout_width="wrap_content"
       android:layout_height="fill_parent"
       android:layout_marginBottom="2dp"
       android:layout_marginTop="2dp"
       android:gravity="center"
       android:layout_gravity="center_vertical"
       android:text="@string/proceed_next" 
       android:textColor="@drawable/button_fore_color" />
   </LinearLayout>   
 </LinearLayout> 
  <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_gravity="top"
      android:background="@drawable/horizontal_line"
  ></LinearLayout> 
 <ScrollView
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"> 
  
 <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"> 
       
    <EditText
        android:id="@+id/sell_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/sell_item_name"
        android:layout_marginTop="@dimen/form_margin_10dp"
        android:layout_marginLeft="@dimen/form_margin_10dp"
        android:layout_marginRight="@dimen/form_margin_10dp"
        android:layout_marginBottom="@dimen/form_margin_10dp"
    />     

    <Spinner
        android:id="@+id/sell_item_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="@dimen/form_margin_10dp"
        android:layout_marginRight="@dimen/form_margin_10dp"
        android:layout_marginBottom="@dimen/form_margin_10dp"
     />

    <Spinner
        android:id="@+id/sell_item_sub_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/form_margin_10dp"
        android:layout_marginRight="@dimen/form_margin_10dp"
        android:layout_marginBottom="@dimen/form_margin_10dp"
     />


    <EditText
        android:id="@+id/sell_item_description"
        android:maxLines="5"
        android:minLines="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Sell_Product_Description_Hint"
        android:layout_marginLeft="@dimen/form_margin_10dp"
        android:layout_marginRight="@dimen/form_margin_10dp"
        android:layout_marginBottom="@dimen/form_margin_10dp" >
    </EditText>

    <EditText
        android:id="@+id/sell_item_expected_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/Sell_Product_Price_Hint"
        android:layout_marginLeft="@dimen/form_margin_10dp"
        android:layout_marginRight="@dimen/form_margin_10dp"
        android:layout_marginBottom="@dimen/form_margin_10dp"
    />  
     
 
   <LinearLayout
     android:layout_gravity="bottom"
     android:gravity="bottom"  
     android:layout_width="fill_parent"
     android:layout_height="fill_parent">    
     <include layout="@layout/common_footer_no_ad" />
   </LinearLayout>
   
  
  
  </LinearLayout> </ScrollView></LinearLayout><!-- First Linear Layout -->

<!-- Second Linear Layout -->
<LinearLayout
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical"
     android:gravity="bottom">
     <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_gravity="bottom"
      android:background="@drawable/horizontal_line">
   </LinearLayout> 
 <LinearLayout
     android:layout_gravity="bottom"
     android:gravity="bottom"  
     android:layout_width="fill_parent"
     android:layout_height="wrap_content">    
     <include layout="@layout/common_footer" />
  </LinearLayout>
</LinearLayout>

</FrameLayout>

