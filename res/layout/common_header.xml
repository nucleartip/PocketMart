<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    
    <ImageView android:id="@+id/header_image"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:scaleType="fitXY"
      android:onClick="pushHomeScreen"
      android:src="@drawable/ic_launcher"
      android:layout_marginRight="@dimen/form_margin_5dp"
      /> 
    <TextView
      android:id="@+id/app_title"
      android:text="@string/app_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="18sp"
      android:layout_gravity="center_vertical"
      android:textColor="@android:color/white"
      android:textStyle="bold"
    /> 
    <LinearLayout 
      android:gravity="right"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_gravity="center_vertical">
    <ImageView
      android:src="@drawable/single_line"
      android:layout_width="2dp"
      android:scaleType="fitXY"
      android:layout_height="fill_parent"/>
 
    
     <ImageButton 
       android:id="@+id/header_msg_button"
       android:src="@drawable/header_msg"
       android:layout_width="50dp"
       android:scaleType="center"
       android:background="@null"
       android:layout_height="fill_parent"   
       android:onClick="showMsgDialog"
       /> 
           
     <ImageView
      android:src="@drawable/single_line"
      android:layout_width="2dp"
      android:scaleType="fitXY"
      android:layout_height="fill_parent"/> 
     <ImageButton 
       android:id="@+id/header_account_button"
       android:src="@drawable/header_account"
       android:layout_width="50dp"
       android:scaleType="center"
       android:background="@null"
       android:layout_height="fill_parent"
       android:onClick="pushMyProfile"       
       /> 
     
    </LinearLayout>
    
</LinearLayout>