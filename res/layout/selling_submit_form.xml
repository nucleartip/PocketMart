<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/common_bg"
     >
  <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_gravity="top"
      android:background="@drawable/horizontal_line"
  ></LinearLayout>      
 <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:background="@drawable/smokey_bg"
    android:gravity="left">
   <TextView 
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:text="Review your Deal"
       android:textSize="16dp"
       android:gravity="center_vertical"
       android:textColor="@android:color/primary_text_light"
       android:textStyle="bold"
       android:paddingLeft="15dp"
   />
 </LinearLayout> 
  <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_gravity="top"
      android:background="@drawable/horizontal_line"
  ></LinearLayout>   
  <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/selling_product_name"
      android:inputType="textImeMultiLine"
      android:singleLine="false"
      android:textSize="18dp"
      android:textStyle="bold"
      android:textColor="@android:color/primary_text_light"
      android:paddingBottom="5dp"
      android:layout_marginLeft="@dimen/form_margin_10dp"
      android:layout_marginRight="@dimen/form_margin_10dp"
      />

  <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
  
  <TextView 
      android:id="@+id/selling_review_location"
      android:layout_width="0dp"
      android:layout_weight=".6"
      android:layout_height="wrap_content"
      android:text="@string/location_para"
      android:textColor="@android:color/secondary_text_light"
      android:textSize="12dp"
      android:gravity="left"
      android:layout_marginLeft="@dimen/form_margin_10dp"
      android:layout_marginRight="@dimen/form_margin_10dp" /> 
      
   <LinearLayout 
     android:orientation="horizontal"
     android:layout_width="0dp"
     android:layout_weight=".4"
     android:layout_height="fill_parent"
     android:gravity="left">
    <ImageView 
      android:layout_width="wrap_content"
      android:layout_height="fill_parent"
      android:src="@drawable/currency_sign_rupee"
      android:scaleType="center"
      android:contentDescription="Price : "/>   

      <TextView
       android:id="@+id/selling_review_price"
       android:layout_width="fill_parent"
       android:textSize="15sp"
       android:textStyle="bold"
       android:textColor="@color/seagreen"
       android:gravity="center_vertical"
       android:layout_height="wrap_content"/>         

   </LinearLayout>
      
  </LinearLayout>
   <LinearLayout 
      android:layout_marginTop="@dimen/top_margin_form_detail"
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_gravity="bottom"
      android:background="@drawable/horizontal_line"
    ></LinearLayout> 
  <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/form_margin_5dp"
    android:layout_marginLeft="@dimen/form_margin_10dp"
    android:layout_marginRight="@dimen/form_margin_10dp"
    android:layout_marginBottom="@dimen/form_margin_5dp"
    
    >

    <TextView
      android:layout_width="0dp"
      android:layout_height="fill_parent"
      android:gravity="top"
      android:text="Product Type"
      android:layout_weight=".3"
      android:textSize="12sp"
      android:textStyle="bold"
      android:textColor="@android:color/primary_text_light" />
      
    <TextView
      android:id="@+id/selling_review_category"
      android:layout_width="0dp"
      android:layout_weight=".7"
      android:textStyle="normal"
      android:textSize="12sp"
      android:inputType="textMultiLine"
      android:singleLine="false"
      android:textColor="@android:color/black"       
      android:layout_height="wrap_content"/>       
    
    
  </LinearLayout>    
   <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_gravity="bottom"
      android:background="@drawable/horizontal_line"
    ></LinearLayout>    
  <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/form_margin_5dp"
    android:layout_marginLeft="@dimen/form_margin_10dp"
    android:layout_marginRight="@dimen/form_margin_10dp"
    android:layout_marginBottom="@dimen/form_margin_5dp"
    
    >

    <TextView
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="top"
      android:text="Description"
      android:textSize="12sp"
      android:textStyle="bold"
      android:textColor="@android:color/primary_text_light" />
      
    <TextView
      android:id="@+id/selling_review_description"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:textStyle="normal"
      android:textSize="12sp"
      android:inputType="textMultiLine"
      android:singleLine="false"
      android:textColor="@android:color/black"       
      android:layout_marginTop="@dimen/form_margin_5dp"
      android:layout_marginBottom="@dimen/form_margin_5dp"
      android:layout_marginRight="@dimen/form_margin_10dp"      
      />       
    
    
  </LinearLayout>   
   

    
      
  <LinearLayout
        android:layout_gravity="bottom"
        android:gravity="bottom"  
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
  <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_gravity="top"
      android:background="@drawable/horizontal_line"
  ></LinearLayout> 
  <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_marginTop="@dimen/form_margin_5dp"
      android:layout_marginBottom="@dimen/form_margin_5dp"
      >  
        <Button 
        android:id="@+id/submit_edit"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/form_button_submit"
        android:layout_height="@dimen/form_button_height"
        android:gravity="center"
        android:text="@string/edit"  
        android:layout_marginRight="@dimen/form_margin_5dp"
        android:background="@drawable/button_background"
        android:textColor="@drawable/button_fore_color"
        
         />      
        <Button 
        android:id="@+id/submit_selling"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/form_button_submit"
        android:layout_height="@dimen/form_button_height"
        android:gravity="center"
        android:text="@string/submit_sell"  
        android:background="@drawable/button_background"
        android:textColor="@drawable/button_fore_color"
        
         /> 
  </LinearLayout>
  <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_gravity="top"
      android:background="@drawable/horizontal_line"
  ></LinearLayout>             
      
        <include layout="@layout/common_footer" />
     </LinearLayout> 
</LinearLayout>