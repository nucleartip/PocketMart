<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:gravity="center_horizontal"
    android:layout_marginTop="@dimen/form_margin_10dp"
    android:layout_marginBottom="@dimen/form_margin_10dp"    >"
    
    <ImageView 
      android:layout_width="0dp"
      android:layout_weight=".1"
      android:layout_marginLeft="@dimen/form_margin_5dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:src="@drawable/header_msg_light"/>
    <TextView 
      android:layout_width="0dp"
      android:layout_weight=".7"
      android:textSize="24sp"
      android:layout_marginLeft="@dimen/form_margin_5dp"      
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:gravity="center_vertical"
      android:text="My Message's"
      android:textStyle="bold"/>
    <ImageButton 
      android:src="@drawable/navigation_back"
      android:id="@+id/msg_title_back"
      android:background="@null"
      android:layout_width="0dp"
      android:layout_weight=".2"
      android:layout_marginLeft="@dimen/form_margin_5dp"      
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"/>

</LinearLayout>